            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Our Team"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:layout_marginLeft="10dp"
                android:paddingBottom="24dp"/>

            <!-- Developer 1 Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/developer1_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/developer1_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/deshmukh"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#1976D2"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:id="@+id/developer1_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dr. Srikant G. Deshmukh"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:id="@+id/developer1_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Principal"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CSMSS Ayurved Mahavidyalaya &amp; Rugnalaya"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

